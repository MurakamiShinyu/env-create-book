{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/build"]
  },
  "include": ["src/build/**/*"],
  "exclude": ["node_modules", "src/build/**/*.test.ts"]
}
