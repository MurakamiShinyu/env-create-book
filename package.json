{
  "name": "env-write-book",
  "description": "Environment of write the book with Vivliostyle/vivliostyle-savepdf.",
  "version": "1.0.0",
  "author": "akabeko",
  "license": "AGPL-3.0",
  "private": true,
  "engines": {
    "node": ">= 10"
  },
  "main": "index.js",
  "keywords": [
    "book",
    "Vivliostyle",
    "viola-savepdf"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akabekobeko/env-write-ebook.git"
  },
  "scripts": {
    "start": "npm run watch",
    "lint": "textlint ./src/content/**",
    "tsc": "tsc --rootDir ./src/build/ --noEmit --skipLibCheck",
    "build:clean": "rimraf ./dist",
    "build:copy-content": "cpx \"src/content/**/!(*.md)\" dist/",
    "build:css": "sass src/scss/app.scss:dist/bundle.css",
    "build:md": "ts-node src/build/index.ts -i src/content/ -o dist/",
    "build:pdf": "vivliostyle build --book -s JIS-B5 dist --press-ready",
    "build": "run-s build:clean build:copy-content build:css build:md build:pdf",
    "watch:copy-content": "cpx \"src/content/**/!(*.md)\" dist/ -w",
    "watch:css": "sass src/scss/app.scss:dist/bundle.css --watch",
    "watch:md": "ts-node src/build/index.ts -i src/content/ -o dist/ -w",
    "watch": "npm-run-all -s build:clean build:css build:md -p watch:* preview",
    "preview": "vivliostyle preview dist/ --book"
  },
  "dependencies": {
    "@paperist/remark-crossref": "^2.0.0",
    "@types/mkdirp": "^1.0.1",
    "@types/refractor": "^2.8.0",
    "@vivliostyle/cli": "^2.1.0",
    "chokidar": "^3.4.1",
    "cpx": "^1.5.0",
    "hastscript": "^6.0.0",
    "mdast-util-to-hast": "^9.1.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "refractor": "^3.0.0",
    "rehype-format": "^3.1.0",
    "rehype-raw": "^4.0.2",
    "rehype-stringify": "^8.0.0",
    "remark-footnotes": "^1.0.0",
    "remark-frontmatter": "^2.0.0",
    "remark-parse": "^8.0.2",
    "remark-parse-yaml": "0.0.3",
    "remark-rehype": "^7.0.0",
    "remark-ruby": "^0.2.1",
    "sass": "^1.26.10",
    "textlint": "^11.6.3",
    "textlint-rule-ja-hiragana-hojodoushi": "^1.0.4",
    "textlint-rule-ja-no-abusage": "^2.0.1",
    "textlint-rule-ja-no-redundant-expression": "^3.0.1",
    "textlint-rule-ja-no-successive-word": "^1.1.0",
    "textlint-rule-max-kanji-continuous-len": "^1.1.1",
    "textlint-rule-max-ten": "^2.0.3",
    "textlint-rule-no-doubled-conjunction": "^1.0.2",
    "textlint-rule-no-doubled-conjunctive-particle-ga": "^1.1.0",
    "textlint-rule-no-doubled-joshi": "^3.7.2",
    "textlint-rule-no-dropping-the-ra": "^1.1.2",
    "textlint-rule-no-mix-dearu-desumasu": "^4.0.1",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-no-nfd": "^1.0.2",
    "textlint-rule-preset-ja-spacing": "^2.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "unified": "^9.0.0",
    "unist-builder": "^2.0.3",
    "unist-util-visit": "^2.0.3"
  }
}
