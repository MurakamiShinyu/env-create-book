{
  "name": "env-write-book",
  "description": "Environment of write the book with Vivliostyle/viola-savepdf.",
  "version": "1.0.0",
  "author": "akabeko",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 10"
  },
  "main": "index.js",
  "keywords": [
    "book",
    "Vivliostyle",
    "viola-savepdf"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akabekobeko/env-write-ebook.git"
  },
  "scripts": {
    "start": "run-p watch",
    "build:clean": "rimraf ./dist",
    "build:copy-content": "cpx \"src/content/**/!(*.md)\" dist/",
    "build:css": "node-sass src/scss/app.scss dist/bundle.css -r --source-map true --output-style expanded",
    "build:md": "ts-node src/build/index.ts -i src/content/ -o dist/",
    "build:pdf": "savepdf --book -s JIS-B5 dist",
    "build": "run-s build:clean build:copy-content build:css build:md build:pdf",
    "watch:copy-content": "cpx \"src/content/**/!(*.md)\" dist/ -w",
    "watch:css": "node-sass src/scss/app.scss dist/bundle.css -w -r --source-map true --output-style expanded",
    "watch:md": "ts-node src/build/index.ts -i src/content/ -o dist/ -w",
    "watch": "run-p watch:*",
    "preview": "savepdf --book --preview dist/"
  },
  "dependencies": {
    "@paperist/remark-crossref": "^1.0.3",
    "@types/mkdirp": "^0.5.2",
    "@types/refractor": "^2.8.0",
    "chokidar": "^3.0.1",
    "cpx": "^1.5.0",
    "hastscript": "^5.1.0",
    "mdast-util-to-hast": "^6.0.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "refractor": "^2.9.0",
    "rehype-format": "^2.3.2",
    "rehype-raw": "^4.0.1",
    "rehype-stringify": "^6.0.0",
    "remark-frontmatter": "^1.3.1",
    "remark-parse": "^6.0.3",
    "remark-parse-yaml": "0.0.2",
    "remark-rehype": "^4.0.0",
    "remark-ruby": "^0.2.0",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1",
    "unified": "^7.1.0",
    "unist-builder": "^1.0.4",
    "unist-util-visit": "^1.4.1",
    "viola-savepdf": "^1.2.7",
    "vivliostyle": "^2019.1.105"
  }
}
